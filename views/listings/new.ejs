<% layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
    <form method="post" action="/listings"  class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" placeholder="Add Catchy Title" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter valid Title</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter valid Description</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image</lable>
            <input name="listing[image]" type="file" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" placeholder="1200" type="text" class="form-control" required >
                <div class="invalid-feedback">Please enter valid Price</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" placeholder="Jaipur,Rajasthan" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter valid Location</div>
            </div>
        </div>
        <div class="mb-3 ">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter valid Country name</div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>
</div>
</div>
</body>